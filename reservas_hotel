clientes = []

# Cadastro de Cliente
usuario1 = input('Digite o nome do cliente1: ')
idade1 = int(input('Digite a idade do cliente1: '))
quarto1 = input('Escolha o quarto (simples / duplo / luxo): ')
dias1 = int(input('Quantidade de dias no hotel: '))

if quarto1 == 'simples':
    valor1 = 100
elif quarto1 == 'duplo':
    valor1 = 150
elif quarto1 == 'luxo':
    valor1 = 250
else:
    valor1 = 0
    print('Tipo de quarto inválido!')

total1 = valor1 * dias1
clientes.append(total1)

print('Cliente1', usuario1)
print('Total a pagar: R$ ', total1)

formas_pagamentos =  ['pix','boleto','cc','cd']
print('escolha a  forma de pagamento: ', formas_pagamentos)
escolhe_forma = input('Digite a forma de pagamento: ')
indice = formas_pagamentos.index(escolhe_forma)
print('Forma de pagamento: ', formas_pagamentos[indice])
print('Obrigada volte sempre! ')

print('***' * 20)

